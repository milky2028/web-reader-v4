		"@rollup/plugin-typescript": "^11.1.6",
		"@types/express": "^4.17.21",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^9.1.0",
